<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<ApplicationIcon>.\..\icon.ico</ApplicationIcon>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<AssemblyVersion>2.2.3.0</AssemblyVersion>
		<FileVersion>2.2.3.0</FileVersion>
		<LangVersion>latest</LangVersion>
		<Version>2.2.3.0</Version>
		<Authors>Michael Vivet</Authors>
		<Product>Dynamic Expression</Product>
		<Summary>Turn criteria models into Linq expressions.</Summary>
		<Description>
			Easily construct lambda expressions dynamically.
			Turn models into database queries, using a simple fluent implementation.
		</Description>
		<PackageTags>Lampda, Expression, Linq, Dynamic, Criteria, Query, Paging, Pagination, Sort, Sorting</PackageTags>
		<PackageReleaseNotes>
			- Symbols package added to NuGet package.
			- Code improvements.
		</PackageReleaseNotes>
		<PackageLicense>https://raw.githubusercontent.com/vivet/DynamicExpression/master/LICENSE</PackageLicense>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<PackageIcon>icon.jpg</PackageIcon>
		<PackageIconUrl />
		<PackageProjectUrl>https://github.com/vivet/DynamicExpression</PackageProjectUrl>
		<RepositoryType>Github</RepositoryType>
		<RepositoryUrl>https://github.com/vivet/DynamicExpression.git</RepositoryUrl>
		<Company>Michael Vivet</Company>
		<WarningsAsErrors />
		<NoWarn />
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<DocumentationFile>$(MSBuildThisFileDirectory)\bin\$(Configuration)\DynamicExpression.xml</DocumentationFile>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>
	<ItemGroup>
		<None Include="icon.jpg" Pack="true" PackagePath="icon.jpg" />
		<None Include="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All"/>
	</ItemGroup>
</Project>
